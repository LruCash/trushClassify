/**index.wxss**/
@import '../template/swiperItem.wxss';

/**整体搜索样式**/

.container {
  display: flex;
  position: relative;
  flex-direction: column;
  align-items: center;
  width: 100%;
  height: 100%;
}

.searchContainer {
  width: 100%;
  align-items: center;
  display: flex;
  padding-bottom: 25rpx;
  flex-direction: row;
  background: #9CC2C4;
}

.search {
  background-color: white;
  display: flex;
  flex-direction: row;
  width: 100%;
  margin-left: 50rpx;
  margin-right: 50rpx;
  padding-top: 10rpx;
  padding-bottom: 10rpx;
  height: 56rpx;
  border-radius: 56rpx;
  align-items: center;
}

/**搜索图标 **/

.search icon {
  justify-content: start;
  padding-left: 30rpx;
}

/**搜索文字**/

.search input {
  padding-left: 15rpx;
  font-size: 16px;
}

.hint_text{
  font-size: 26rpx;
}

.cameraIcon {
  position: absolute;
  right: 75rpx;
}

/**顶部样式**/

.header_tab {
  padding-top: 10rpx;
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  background: white;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.topTab {
  flex: 1;
  font-size: 27rpx;
  text-align: center;
}

/** 指示器**/

.indicator {
  width: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.indicator_tab {
  flex: 1;
  margin-left: 40rpx;
  margin-right: 40rpx;
  height: 5rpx;
}

.wet_active {
  background: #644034;
}

.dry_active {
  background: #2b2623;
}

.recycle_active {
  background: #02427b;
}

.harmful_active {
  background: #d83422;
}

/** swiper样式**/

swiper {
  width: 100%;
}
