.container {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  background: white;
}

.name {
  margin-top: 30rpx;
  font-size: 35rpx;
  font-weight: bold;
}

.trush_image {
  margin-top: 25rpx;
}

.type {
  font-size: 40rpx;
  margin-top: 30rpx;
  font-weight: bold;
}

.throw_tip_title {
  margin-top: 50rpx;
  margin-left: 30rpx;
