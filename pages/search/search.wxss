page{
  width: 100%;
  height: 100%;
}
.search-container{
  width: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
  padding-bottom: 25rpx;
  background: #9CC2C4;
}

.search {
  background-color: white;
  display: flex;
  margin-left: 40rpx;
  flex-direction: row;
  padding-top: 10rpx;
  padding-bottom: 10rpx;
  width: 580rpx;
  height: 56rpx;
  border-radius: 56rpx;
  align-items: center;
}

/**搜索图标 **/
.search icon {
  justify-content: center;
  padding-left: 30rpx;
}

/**搜索hint**/
.search input {
  padding-left: 15rpx;
  font-size: 16px;
}

.search-text{
  font-size: 25rpx;
  margin-left: 30rpx;
}

/**滚动列表**/
.scrollview{
  width: 100%;
  height: 100%;
  background: white;
}

/**滚动列表item**/
.search-item{
  margin-top: 30rpx;
  align-items: center;
  display: flex;
  justify-content: center;
  flex-direction: row;
  width: 100%;
  height: 65rpx;
}

.trush-name{
  font-size: 28rpx;
  flex: 1;
  padding-left: 70rpx;
  text-align: start;
}

.trush-classify{
  font-size: 28rpx;
  flex: 1;
  padding-left: 50rpx;
  text-align: start;
}

.icon-container{
  display: flex;
  flex: 1;
  flex-direction: row;
  justify-content: flex-end;
}

.item-icon{
  margin-right: 50rpx;
  width: 50rpx;
  height: 50rpx;
}

.divider{
  height: 1rpx;
  margin-left: 70rpx;
  -webkit-transform: scaleY(0.5);
  background: 	#E9F2F1;
}
